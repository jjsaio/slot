#!/bin/bash

SCRIPT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null && pwd )"
SLOT_HOME="${SCRIPT_PATH}/.."
PYPATH="${SLOT_HOME}"

if [[ $# -eq 0 ]] ; then
   PYTHONPATH="${PYPATH}" python3
elif [ "${1: -3}" == ".py" ] ; then
   PYTHONPATH="${PYPATH}" python3 "$@"
elif [ "$1" == "-m" ] ; then
   PYTHONPATH="${PYPATH}" python3 "$@"
else
   PYTHONPATH="${PYPATH}" python3 -m driver "slot.$@"
fi
